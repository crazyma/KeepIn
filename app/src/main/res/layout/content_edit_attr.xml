<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/accountImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_indicator_account" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/passwordImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="@+id/accountImageView"
        app:layout_constraintTop_toBottomOf="@+id/userNameImageView"
        app:srcCompat="@drawable/icon_indicator_password" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/userNameImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="@+id/accountImageView"
        app:layout_constraintTop_toBottomOf="@+id/accountImageView"
        app:srcCompat="@drawable/icon_indicator_username" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/emailImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="@+id/accountImageView"
        app:layout_constraintTop_toBottomOf="@+id/passwordImageView"
        app:srcCompat="@drawable/icon_indicator_email" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/remarkImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="@+id/accountImageView"
        app:layout_constraintTop_toBottomOf="@+id/emailImageView"
        app:srcCompat="@drawable/icon_indicator_remark" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/accountInputLayout"
        android:layout_width="match_parent"
        android:layout_height="56sp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="16dp"
        app:hintTextAppearance="@style/TextInputHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/accountImageView">

        <AutoCompleteTextView
            android:id="@+id/accountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_account"
            android:textColor="@color/edit_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="56sp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="16dp"
        app:hintTextAppearance="@style/TextInputHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/passwordImageView">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            android:textColor="@color/edit_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userNameInputLayout"
        android:layout_width="match_parent"
        android:layout_height="56sp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="16dp"
        app:hintTextAppearance="@style/TextInputHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userNameImageView">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/userNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_user_name"
            android:textColor="@color/edit_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="match_parent"
        android:layout_height="56sp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="16dp"
        app:hintTextAppearance="@style/TextInputHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/emailImageView">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email"
            android:textColor="@color/edit_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/remarkInputLayout"
        android:layout_width="match_parent"
        android:layout_height="56sp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="16dp"
        app:hintTextAppearance="@style/TextInputHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/remarkImageView">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/remarkEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_remark"
            android:textColor="@color/edit_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/passwordButton"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/stroke_green_background"
        android:text="@string/btn_create_password"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/passwordInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>